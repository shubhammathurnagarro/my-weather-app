<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ErrorTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
    </style>

    <style name="PrimaryTextViewStyleLarge" parent="PrimaryTextViewStyle">
        <item name="android:textSize">@dimen/primary_text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>

    <style name="ForecastListViewItemTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>
</resources>
